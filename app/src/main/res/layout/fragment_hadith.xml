<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.siddiq.bukhari___sharef.Hadith"
    android:background="@drawable/bb"
    android:orientation="vertical"
    android:weightSum="10">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.2"
        android:weightSum="10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:drawable/ic_menu_share"
                android:layout_marginRight="31dp"
                android:layout_marginEnd="31dp"
                android:layout_alignTop="@+id/favclick"
                android:layout_alignRight="@+id/booknametextview"
                android:layout_alignEnd="@+id/booknametextview"
                android:id="@+id/sharee" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/abc"
                android:layout_gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="صحيح البخاري"
                android:textStyle="bold"
                android:id="@+id/booknametextview"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="100"
                android:id="@+id/hadithnotextview"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:layout_toEndOf="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hadith No: "
                android:id="@+id/textView5"
                android:textSize="10dp"
                android:gravity="center_horizontal"
                android:layout_alignBaseline="@+id/favclick"
                android:layout_alignBottom="@+id/favclick"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/favclick"
                android:background="@drawable/favorite"
                android:padding="3dp"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>










    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.5">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/radioGroup"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_above="@+id/hadithview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="20dp"
                android:text="Arabic"
                android:textStyle="bold"
                android:checked="true"
                android:id="@+id/radioarabic" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textStyle="bold"


                android:textSize="20dp"
                android:id="@+id/radioeng"
                android:layout_gravity="center_horizontal" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urdu"
                android:textStyle="bold"


                android:textSize="20dp"
                android:id="@+id/radiourdu" />

        </RadioGroup>

    </LinearLayout>

     <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1.3">

         <TextView
             android:layout_width="match_parent"
             android:maxLines = "10000"
             android:scrollbars = "vertical"
             android:layout_height="match_parent"
             android:id="@+id/hadithview"
             android:textColor="#000000"
             android:textAlignment="center"
             android:textSize="25dp"
             android:padding="10dp"
             android:text="djljdjsakjdjskljdjsakjdjskjdksjjdkskdjksjkdjksjdkjskjdksjkdjksjdkjskdjksjdkjskdjksjdkjskjdksjkdjksjkdjskjdksjdkjskjdksjdksjdksjdkjskdjksjdkjskjd" />



     </LinearLayout>
















</LinearLayout>
